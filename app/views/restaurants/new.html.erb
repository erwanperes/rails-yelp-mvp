<div class="row mt4">
  <div class="col">
    <h1>New Restaurant</h1>
  </div>
  <div>
    <%= simple_form_for [@restaurant] do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.label :category %>
      <%= f.select :category, Restaurant::CATEGORY, prompt: "Pick one" %>
      <%= f.submit "Create", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<hr>
<%= link_to 'Back to Index', restaurants_path %>